<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.leyou.item.mapper.SpecParamMapper">

    <select id="selectALlByGid" resultType="com.leyou.item.domain.SpecParam">

        select * from tb_spec_param where group_id = #{gid}

    </select>


    <select id="selectALlByAll" resultType="com.leyou.item.domain.SpecParam">

        select * from tb_spec_param
        <where>
            <if test="gid!=null">
                group_id = #{gid}
            </if>
            <if test="cid!=null">
                cid = #{cid}
            </if>
            <if test="generic!=null">
                generic = #{generic}
            </if>
            <if test="searching!=null">
                searching = #{searching}
            </if>
        </where>

    </select>


</mapper>