<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.leyou.item.mapper.BrandMapper">

    <select id="selectLikeByName" resultType="com.leyou.item.domain.Brand">

    select * from tb_brand where name like #{name}

    </select>

    <select id="queryBrandsBycid" resultType="com.leyou.item.domain.Brand">

        select * from tb_brand join tb_category_brand on tb_category_brand.brand_id = tb_brand.id
        where tb_category_brand.category_id = #{cid}

    </select>

    <select id="selectByid" resultType="com.leyou.item.domain.Brand">

        select * from tb_brand where id = #{id}

    </select>

    <select id="selectAll" resultType="com.leyou.item.domain.Brand">

    select * from tb_brand

    </select>

    <insert id="insertBrandAndCategory">

        insert into tb_category_brand (category_id, brand_id) values (#{cid},#{bid})

    </insert>

    <insert id="insertBrandById" parameterType="com.leyou.item.domain.Brand">

        <selectKey keyProperty="id" keyColumn="id" resultType="Long">
            select last_insert_id();
        </selectKey>

        insert into tb_brand (name,image,letter) values (#{name},#{image},#{letter})

    </insert>


</mapper>