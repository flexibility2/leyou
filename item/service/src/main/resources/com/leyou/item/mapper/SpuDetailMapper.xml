<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.leyou.item.mapper.SpuDetailMapper">
    <insert id="insertSpuDetails" parameterType="com.leyou.item.domain.SpuDetail">
        <selectKey keyProperty="spuId" keyColumn="id" resultType="Long">
            select last_insert_id();
        </selectKey>

        insert into tb_spu_detail(spu_id,description,generic_spec,special_spec,packing_list,after_service)
        values (#{spuId},#{description},#{genericSpec},#{specialSpec},#{packingList},#{afterService})

    </insert>
</mapper>